<div class="row">
  <div class="table-responsive" >
    <table class="table" id="hourlyTable">
      <tbody class="text-center">
        <tr>
	        <% timeCount = 0 %>
	        <% @numHours.times do %>
	        	<% if timeCount == 0 %>
	        		<td><strong>Now</strong></td>
	        	<% else %>
	        		<td><%= local_time(@hourlyTime[timeCount], "%l%P") %></td>
	        	<% end %>
	        	<% timeCount = timeCount + 1 %>
	        <% end %>
        </tr>
        <tr>
	        <% iconCount = 2 %>
	        <% @numHours.times do %>
	          <td><canvas id="<%="icon#{iconCount}"%>"  width="32" height="32"></canvas></td>

	        <% iconCount = iconCount + 1 %>
	        <% end %>
        </tr>
        <tr>
	        <% tempCount = 0 %>
	        <% @numHours.times do %>
	          <td><%= @hourlyTemp[tempCount] %></td>
	        <% tempCount = tempCount + 1 %>
	        <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>	