<div class="row <%= @conditionBG %>BG-3">
	<div class="container padTop" id="daily">
	  <div class="table-responsive">
	    <table class="table" id="dailyTable">
	      <tbody>
	      <% dayCount = 1 #set to 0 to add 'today' back %>
	      <% iconCount = 28 #set to 27 to add 'today' back %> 
	      <% @numDays.times do #set to 8 in welcomecontroller to add 'today' back %>
	        <tr>

		          <td class="pull-left">
		          	<% todaysDay = Time.now.strftime("%A") %>
		          	<% if dayCount == 0 %>
		          		<strong>Today</strong>
		          	<% else %>
		          		<%= @dailyTime[dayCount]%>
		          	<% end %>
		          </td>
		          <td><canvas id="<%="icon#{iconCount}"%>"  width="32" height="32"></canvas></td>
		          <td class="pull-right"><%= @dailyHiTemp[dayCount] %>° &nbsp; <small id="loTemp"><%= @dailyLoTemp[dayCount] %>°</small></td>

	        </tr>
	        <% dayCount = dayCount + 1 %>
	        <% iconCount = iconCount + 1 %>
	      <% end %>

	      </tbody>
	    </table>
	  </div>

	</div>
</div>	