<div class="row blueBG">
 	<div class="container padTop">
		<div class="row">
			<div class="container text-center">
				<ul class="list-unstyled">
					<li><canvas id="icon1"  width="128" height="128"></canvas></li>
					<li><h3><%= @myCity %></h3></li>
					<li><h3><small><%= @currentSummary %></small></h3></li>
					<li><h2 class="large">&nbsp;<%= @currentTemp %></h2></li>
				</ul>
				<br />

			 	<h5>
				    <ul class="list-inline pull-left">
				    	<li><strong><%= @dailyTime[0]%></strong></li>
				    	<li><small>Today</small></li>
				    	
				    </ul>
				    <ul class="list-inline pull-right">
				    	<%= @dailyHiTemp[0] %>째 &nbsp; <small id="loTemp"><%= @dailyLoTemp[0] %>째</small> 
				    </ul>		    

				    <br />
				    <hr />
			    </h5>
			</div>
		</div>

		<div class="row">
		  <div class="table-responsive" >
		    <table class="table">
		      <tbody class="text-center">
		        <tr>
			        <% timeCount = 0 %>
			        <% @numHours.times do %>
			        	<% if timeCount == 0 %>
			        		<td><strong>Now</strong></td>
			        	<% else %>
			        		<td><%= @hourlyTime[timeCount]%></td>
			        	<% end %>
			        	<% timeCount = timeCount + 1 %>
			        <% end %>
		        </tr>
		        <tr>
			        <% iconCount = 2 %>
			        <% @numHours.times do %>
			          <td><canvas id="<%="icon#{iconCount}"%>"  width="32" height="32"></canvas></td>

			        <% iconCount = iconCount + 1 %>
			        <% end %>
		        </tr>
		        <tr>
			        <% tempCount = 0 %>
			        <% @numHours.times do %>
			          <td><%= @hourlyTemp[tempCount] %></td>
			        <% tempCount = tempCount + 1 %>
			        <% end %>
		        </tr>
		      </tbody>
		    </table>
		  </div>
		</div>	

		<div class="row">
			<div class="container" id="daily">
		      <hr />
			  <div class="table-responsive">
			    <table class="table">
			      <tbody>
			      <% dayCount = 0 %>
			      <% iconCount = 27 %>
			      <% @numDays.times do %>
			        <tr>

				          <td class="pull-left"><%= @dailyTime[dayCount]%></td>
				          <td><canvas id="<%="icon#{iconCount}"%>"  width="32" height="32"></canvas></td>
				          <td class="pull-right"><%= @dailyHiTemp[dayCount] %>째 &nbsp; <small id="loTemp"><%= @dailyLoTemp[dayCount] %>째</small></td>

			        </tr>
			        <% dayCount = dayCount + 1 %>
			        <% iconCount = iconCount + 1 %>
			      <% end %>

			      </tbody>
			    </table>
			  </div>

			</div>
		    <hr / >
		</div>	

		<div class="row">
			<div class="container">
				<h6 class="text-center">Today: <%= @weekSummary %></h6> <br />
			</div>
		</div>	

		<div class="row">
			<%= render "welcome/collapse" %>
			<br />
		</div>
	</div>

</div>


  <!-- set skycons using js + erb-->
  <%= javascript_tag do %>
     var skycons = new Skycons({
     "monochrome": false,
     "colors" : {
       "cloud" : "aliceBlue",
       "fog"   : "#E5E5E5"
     }
     });

    skycons.add("icon1", Skycons.<%= @currentSkycon %>);

    <% hourlyIconCount = 2 %>
    <% hourlyArrayCount = 0 %>
    <% 25.times do %>
    	skycons.add("<%= "icon" + hourlyIconCount.to_s %>",  Skycons.<%= @hourlySkycon[hourlyArrayCount] %>);
    	<% hourlyIconCount = hourlyIconCount + 1 %>
    	<% hourlyArrayCount = hourlyArrayCount + 1 %>
    <% end %>

    <% dailyIconCount = 27 %>
    <% dailyArrayCount = 0 %>
    <% 8.times do %>
	    skycons.add("<%= "icon" + dailyIconCount.to_s %>", Skycons.<%= @dailySkycon[dailyArrayCount] %>);
	    <% dailyIconCount = dailyIconCount + 1 %>
	    <% dailyArrayCount = dailyArrayCount + 1 %>
	<% end %>

    skycons.play();

  <% end %>