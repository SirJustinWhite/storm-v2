  <%= javascript_tag do %>
  var skycons = new Skycons({
     "monochrome": false,
     "colors" : {
       "cloud" : "aliceBlue",
       "fog"   : "#E5E5E5",
       "moon"  : "#e6e9d0"
     }
     });

    skycons.add("icon1", Skycons.<%= @randomSkyconLtd%>);   

    skycons.play();

